# =================================================
# PostgreSQL Database Configuration Template
# Copy file này thành .env.development và điền thông tin thực tế
# =================================================

# Database Connection Settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USERNAME=your_username
DB_PASSWORD=your_password

# Connection Pool Settings
DB_POOLING=true
DB_MIN_POOL_SIZE=1
DB_MAX_POOL_SIZE=20
DB_CONNECTION_TIMEOUT=30
DB_COMMAND_TIMEOUT=30

# SSL Settings
DB_SSL_MODE=Prefer
DB_TRUST_SERVER_CERTIFICATE=true

# EF Core Development Settings
DB_INCLUDE_ERROR_DETAIL=true
DB_ENABLE_SENSITIVE_DATA_LOGGING=false

# =================================================
# Application Settings
# =================================================

ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://localhost:5000
LOG_LEVEL_DEFAULT=Debug
SERILOG_MIN_LEVEL=Debug
SERILOG_FILE_PATH=logs/product-service-dev-.txt

# =================================================
# Business Settings
# =================================================

DEFAULT_CURRENCY=VND
LOW_STOCK_THRESHOLD=10
MAX_PRODUCTS_PER_PAGE=50
OUTBOX_PROCESSING_INTERVAL_SECONDS=30
OUTBOX_MAX_RETRY_COUNT=3
OUTBOX_BATCH_SIZE=100