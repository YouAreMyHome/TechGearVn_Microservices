{
  "ConnectionStrings": {
    "ProductDatabase": ""
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "ProductServiceSettings": {
    "DefaultCurrency": "VND",
    "LowStockThreshold": 10,
    "MaxProductsPerPage": 50
  },
  "OutboxSettings": {
    "ProcessingIntervalSeconds": 30,
    "MaxRetryCount": 3,
    "BatchSize": 100
  },
  "QueryOptimization": {
    "EnableQueryHints": true,
    "EnableBatchQueries": true,
    "DefaultPageSize": 20,
    "MaxPageSize": 100,
    "QueryTimeout": "00:00:30",
    "EnableQueryLogging": false
  },
  "AllowedHosts": "*"
}